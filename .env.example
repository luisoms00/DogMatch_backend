# Flask
FLASK_ENV=development
FLASK_APP=run.py

# Database
# Example for MySQL: mysql+pymysql://user:password@host:3306/dogmatch
DATABASE_URL=mysql+pymysql://root:@localhost:3306/dogmatch


# JWT
JWT_SECRET_KEY=change-me-in-production
JWT_ACCESS_TOKEN_EXPIRES=1800   # 30 minutes (seconds)
JWT_REFRESH_TOKEN_EXPIRES=2592000  # 30 days (seconds)

# CORS (comma-separated origins, e.g., Angular/React dev servers)
CORS_ORIGINS=http://localhost:4200,http://localhost:5173

# File uploads
UPLOAD_FOLDER=app/static/uploads
MAX_CONTENT_LENGTH=5 * 1024 * 1024   # 5 MB

# Optional logging
LOG_LEVEL=DEBUG